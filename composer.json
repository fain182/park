{
    "name": "park/park",
    "description": "Architecture validation tool for PHP projects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Park Team",
            "email": "info@park-tool.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0|^7.0",
        "symfony/finder": "^6.0|^7.0",
        "symfony/yaml": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Park\\": "src/Park/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Park\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/park"
    ],
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src",
        "check": [
            "@test",
            "@analyse"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}